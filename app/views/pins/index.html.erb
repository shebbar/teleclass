<% provide(:title, 'Listing Pins') %>
<p id="notice"><%= notice %></p>
<h1>Import Serial Codes and Pins</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_tag import_pins_path, multipart: true do %>
  		<%= file_field_tag :file %>
  		<%= submit_tag "Import", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<h1>Listing Pins</h1>

<table data-toggle="table">
  <thead>
    <tr>
      <th>Pincode</th>
      <th>Serialcode</th>
			<th>User</th>
			<th>Subscribed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.pincode %></td>
        <td><%= pin.serialcode %></td>
				<td><%= pin.user.name unless pin.user.blank? %></td>
				<td><%= pin.activated %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
