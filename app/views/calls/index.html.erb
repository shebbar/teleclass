<% provide(:title, 'Index of Calls') %>
<p id="notice"><%= notice %></p>

<h1>Listing Calls</h1>

<table>
  <thead>
    <tr>
			<th>Pin</th>
			<th>Lesson</th>
      <th>Call date</th>
      <th>Call time</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
				<td><%= call.pin_id %></td>
        <td><%= call.lesson_id %></td>
        <td><%= call.call_date %></td>
        <td><%= call.call_time %></td>
        <td><%= call.duration %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Call', new_call_path %>
